// Particles -------------------------------------------------------------------
#particles
    position: fixed
    z-index: 1
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: $secondary
    background-image: url('')
    background-size: cover
    background-repeat: no-repeat
    background-position: 50% 50%
    canvas
        width: 100%
        height: 100%
        transform: scale(1)
        display: block
        vertical-align: bottom

// Login Page ------------------------------------------------------------------
.login-box
    width: 290px
    background: white
    box-shadow: $shadow-2dp
    padding: 20px
    border-radius: 2px
    .um
        margin: 0 !important
    label
        noselect()
        cursor: pointer
    .um-field-checkbox-option
        noselect()

// Password Reset Page ---------------------------------------------------------
.um-page-password-reset
    .container
        max-width: 290px
    .um
        margin: 0 !important
    #sidebar
        display: none

// Contact Page ----------------------------------------------------------------
.contact-form
    box-shadow: $shadow-2dp
    background: white
    border-radius: 2px
    padding: 20px
    width: 80%
    margin: auto
    margin-top: 0

.contact-form__row
    min-height: 50px
    align-items: center
    justify-content: space-between
    display: flex
    flex-wrap: wrap
    width: 100%


.contact-form__row_submit
    align-items: flex-start

@media screen and (max-width: 600px)
    #recaptcha
        transform: scale(0.8)
    .contact-form__row_submit
        justify-content: center

.contact-form__item
    display: flex
    flex: auto
    flex-wrap: wrap
    padding: 5px
    input
        flex: auto
    label
        white-space: nowrap
        padding-right: 20px

// Team Page ------------------------------------------------------------
.team-member
    display: flex
    flex-direction: column
    max-width: 250px
    margin: 20px

.team-member__photo
    max-height: 250px
    max-width: 250px
    height: 100%
    width: 100%
    border-radius: 250px
    margin-bottom: 10px

.team-member__name
    display: flex
    align-items: center

.team-member__name a
    @extend .team-member__name
    margin-right: 10px

.team-member__title,
.team-member__role
    font-size: 0.8em


