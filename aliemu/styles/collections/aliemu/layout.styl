html, body
    height: 100%
    width: 100%
    padding: 0
    margin: 0

img
    max-width: 100%

#wpadminbar
    position: fixed

#sidebar
    display: none

#page-container
    background: $secondary
    display: flex
    flex-direction: column
    min-height: 100%

#main-content
    margin-top: $header-height
    flex: 1
    display: flex
    height: 100%
    position: relative
    flex-direction: column
    justify-content: center
    margin-bottom: $block-margin

#content-area,
.content-area
    background: white
    padding: 20px
    border-radius: 2px
    box-shadow: $shadow-2dp

.flex-container
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center

.flex-container--column
    flex-direction: column

.container
    width: 80%
    max-width: 1080px
    margin: auto
    margin-top: $block-margin

@media screen and (max-width: 400px)
    .container
        width: 95%
@media screen and ( max-width: 782px )
    html
        margin-top: 0
