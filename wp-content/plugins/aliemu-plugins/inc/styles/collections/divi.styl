// Navbar
#top-menu
    li a
        color $font-color

        &:hover
            opacity 1 !important

    ul.sub-menu
        background-color white
        border-top 3px solid $blue
        padding 0
        right 0
        width auto
        min-width 150px
        box-shadow $box-shadow-farther

        li
            padding 0
            line-height 3em
            width 100%

            &:hover
                background-color $light-gray
                cursor pointer

            a
                width 100%
                white-space nowrap


.et_fixed_nav.et_show_nav #page-container,
.et_non_fixed_nav.et_transparent_nav.et_show_nav #page-container
    padding-top 50px


.et_pb_fullwidth_menu
    height 50px

    .fullwidth-menu-nav > ul
        padding 0 !important
        line-height 50px !important

    .et_mobile_menu
        top 50px

    .et_menu_bar:before
        top 0 !important
        line-height 50px


.et_pb_column
    margin-bottom 0


// NOTE: These styles may create conflicts
.et_pb_section
    padding-bottom 0


.et_pb_row
    padding 0


// Tooltips
.et-tooltip-box
    left -133px !important
    width 400px !important
    font 300 0.9em Lato
    text-align left


.et_pb_section:last-of-type
    margin-bottom: 106px


// Headers / Footers
#et-main-area
    min-height calc(100vh - 80px)


#main-content
    min-height calc(100vh - 80px - 53px)


@media only screen and (min-width 980px)
    #logo
        max-height 30px

    header,
    header div,
    header div div
        height 50px !important
        padding-top 0 !important
        padding-bottom 0 !important

    header div div a
        padding-bottom 0 !important
        line-height 50px

    #et_top_search span:before
        padding-top 18px !important
        margin-top 0 !important

    #et_top_search
        margin-right 10px



@media only screen and (max-width 980px)
    #logo
        max-height 30px

    header,
    header div,
    header div div
        height 50px !important
        padding 0 !important

    #et-top-navigation .mobile_menu_bar
        padding 8px 0 10px !important

    #et_search_icon:before
        margin-top 9px

    #mobile_menu .sub-menu li
        display none



// Mobile nav
.et_mobile_menu
    padding 0
    width 300px
    right 0
    left auto



// Lesson widths
@media (max-width 780px)
    .container,
    .et_pb_container,
    .et_pb_row
        width 95%



// Fullscreen sliders
@media only screen and (max-width 479px)
    .et_pb_slide_description
        padding 20px 0 10px

    .et_pb_more_button,
    .et_pb_slide_content
        display block !important
